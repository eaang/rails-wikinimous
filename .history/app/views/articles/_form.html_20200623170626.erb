<%= form_for(@article) do |f| %>
<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, :class => 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :content %>
  <%= f.rich_text_area :content, :class => 'form-control' %>
</div>
<%= f.submit "Create Article", :class => 'btn btn-outline-dark' %>
<% end %>